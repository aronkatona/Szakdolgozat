<!-- Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">#springMessageText("**message.game.confirm_modal.sure**" "**message.game.confirm_modal.sure**")</h4>
      </div>
      <div class="modal-footer">
        <a href="leaveTheLeague&id=$league.id" class="btn btn-primary">#springMessageText("**message.game.confirm_modal.yes**" "**message.game.confirm_modal.yes**")</a>
        <button type="button" class="btn btn-default" data-dismiss="modal">#springMessageText("**message.game.confirm_modal.no**" "**message.game.confirm_modal.no**")</button>
      </div>
    </div>
  </div>
</div>