<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<title></title>
		<script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
		<script type="text/javascript"  src="./resources/js/registrationCheck.js"></script>
	</head>
<body>

#parse("./game/includes/menu.vm")

	<div class="container">

		<form action="saveUser" method="post">
		  <div class="form-group">
			<label>Név</label>
			<span id="existName" style="color: red; display:none;">&nbsp létező username</span>
				#springBind("user.name")
				<input type="text" id="name" class="form-control" name="name" value="$!user.name" onkeyup="userExistByName()" placeholder="Add meg a felhasználóneved!">
				#if($existingUser)<div class="alert alert-danger" role="alert"> A usernév már foglalt! </div> #end
				#foreach($error in $status.errorMessages)<div class="alert alert-danger" role="alert"> $error </div> #end
		  </div>
		  <div class="form-group">
			<label>E-mail</label>
			<span id="existEmail" style="color: red; display:none;">&nbsp létező email</span>
			<span id="notValidEmail" style="color: red; display:none;">&nbsp nem megfelelo email</span>
				#springBind("user.email")
				<input type="email" id="email" class="form-control"  name="email" value="$!user.email" onkeyup="userExistByEmail()" placeholder="Add meg az e-mail címed!">
				#foreach($error in $status.errorMessages)<div class="alert alert-danger" role="alert"> $error </div> #end
		  </div>
		  <div class="form-group">
			<label>Jelszó</label>
				#springBind("user.password")
				<input type="password" class="form-control"  name="password" placeholder="Jelszó!">
				#foreach($error in $status.errorMessages)<div class="alert alert-danger" role="alert"> $error </div> #end
		  </div>
		  <div class="form-group">
			<label>Jelszó újra</label>
				#springBind("user.passwordAgain")
				<input type="password" class="form-control"  name="passwordAgain" placeholder="Jelszó ismét!">
				#foreach($error in $status.errorMessages)<div class="alert alert-danger" role="alert"> $error </div> #end
		  </div>

		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
			
			#if($isPasswordSame)
				<div class="alert alert-danger" role="alert">A jelszavak nem egyeznek!</div>
			#end
			
			#if($existEmail)
				<div class="alert alert-danger" role="alert">Az e-mail cím már foglalt!</div>
			#end
			
			#if($existName)
				<div class="alert alert-danger" role="alert">A név már foglalt!</div>
			#end
			
	</div>
</body>
</script>
</html>