<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<title>Kezdőoldal</title>
	</head>
<body>

#parse("./game/includes/menu.vm")

<div class="container">
	
	#if($successLogin)
        		
				<div class="container">
						<div class="alert alert-success" role="alert"> Sikeres bejelentkezés!</div>
				</div>
	#end
	
	<div class="jumbotron">
		
			<!-- log utan-->
			
			
			#if($loggedin)
				<div class="container">
					<h1>Üdv az oldalon $userName!</h1>
					<a href="myTeam"><h3>A csapatodat itt tekintheted meg</h3> </a>
				</div>
			#else
				<div class="container">
					<h1>Üdv az oldalon!</h1>
						<p>Regisztrálj be még ma, hogy ne maradj le az idei bajnokságról!</p>
						<p>
							<a class="btn btn-primary btn-lg" href="registration" role="button">Regisztráció</a>
							<a class="btn btn-primary btn-lg" href="loginPage" role="button">Bejelentkezés</a>
						</p>
				</div>
			#end
			
			
	</div>
</div>


