<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<title>versenyek</title>
	</head>
<body>

#parse("./admin/includes/menu.vm")

<div class="container">
	
	<table class="table table-striped table-hover table-responsive">
		<thead>
		  <tr>
			<th>Futam időpont</th>
			<th>Szerkesz</th>
			<th>Eredmény</th>
			<th>Töröl</th>
		  </tr>
		</thead>
		<tbody>
			#foreach($race in $races)
			  <tr>
				<td>$race.date</td>
				<td><a href="modifyRace&id=$race.id">szerkeszt</a></td>
				<td>#if($race.resultSet) <a href="resultRace&id=$race.id">eredmeny #else Nincs még eredmény #end</a></td>
				<td>torol</td>	
			  </tr>
			 #end
		 </tbody>
	</table>
	
</div>

</body>
</html>
