<html>
	<head>
		<title></title>
	</head>
<body>
uj pilota form<br>

    <form action="saveDriver" method="post">
		
		<input style="display: none;" type="text" name="id" value="$!driver.id"></input>
    
     	#springBind("driver.name")
    	name<input type="text" name="name" value="$!driver.name"></input> $!existingDriver
		#foreach($error in $status.errorMessages) $error #end<br>
    	
    	#springBind("driver.price")
    	price<input type="text" name="price" value="$!driver.price"></input>
		#foreach($error in $status.errorMessages) $error #end<br>
    	
		#springBind("driver.picture")
    	picture<input type="text" name="picture" value="$!driver.picture"></input>
		#foreach($error in $status.errorMessages) $error #end<br>
		
	
		team<select name="team.id">
		#foreach($team in $teams)
				#springBind("driver.team.id")
				#if($!driver.team.id && $driver.team.id == $team.id)
					<option selected="selected" value="$team.id">
						$team.name
					</option>
				#else
				<option value="$team.id">$team.name</option>
				#end
		#end
		</select>
		<br>
			
    	<input type="submit" value="save"></input>
    </form>	
</body>
</html>
