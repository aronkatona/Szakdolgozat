<html>
    <head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title></title>
    </head>
<body>

#parse("./admin/includes/menu.vm")

	<div class="container">
		
		<form action="saveChampionship" method="post">
				<input style="display: none;" type="text" name="id" value="$!championship.id"></input>
			  <div class="form-group">
				<label>Kezdet</label>
					#springBind("championship.startDate")
					<input type="date" class="form-control" name="startDate" value="$!championship.startDate">
					#foreach($error in $status.errorMessages)<div class="alert alert-danger" role="alert"> $error </div> #end
			  </div>
			  <div class="form-group">
				<label>Vég</label>
					#springBind("championship.endDate")
					<input type="date" class="form-control"  name="endDate" value="$!championship.endDate">
					#foreach($error in $status.errorMessages)<div class="alert alert-danger" role="alert"> $error </div> #end
			  </div>
			  
			  <button type="submit" class="btn btn-primary">Submit</button>
			</form>
			
			#if($validDateRange)
					<div class="alert alert-danger" role="alert">Az intervallum nem megfelelő!</div>
			#end
		
	</div>
</body>
</html>
