<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<title></title>
	</head>
<body>

#parse("./admin/includes/menu.vm")


<div class="container">
	#if($races.size() != 0)
	
		#if($!sameDriver)
			<div class="alert alert-danger" role="alert">Ugyanaz a pilota ketszer szerepelt egy oszlopban!</div>
		#end
		
		#if($unknownError)
			<div class="alert alert-danger" role="alert">Ismeretlen hiba tortent, vegye fel a kapcsolatot!</div>
		#end
	
		<form action="saveRaceResult" method="post">	
		  <div class="form-group">
			<label>Verseny</label>
				<select class="form-control" name="race.id">
				#foreach($race in $races)
						<option value="$race.id">$race.date</option>
				#end
				</select>
				#foreach($error in $status.errorMessages) $error #end<br>
		  </div>
		   
		  
		  <table class="table table-striped table-hover table-responsive">
				<thead>
				  <tr>
					<th>helyezes</th>
					<th>im</th>
					<th>verseny</th>
				  </tr>
				</thead>
				<tbody>
					#foreach($d in $drivers)
					  <tr>
						<td>$velocityCount</td>
						<td>
							<select class="form-control" name="qualifyingDrivers">
								#foreach($driver in $drivers)
										<option value="$driver.id">$driver.name</option>
								#end
							</select>
						</td>
						<td>
							<select class="form-control" name="raceDrivers">
								#foreach($driver in $drivers)
										<option value="$driver.id">$driver.name</option>
								#end
							</select>
						</td>
					  </tr>
					 #end
				 </tbody>
			</table>

		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
	#else
		<p>Minden futamhoz van allitva eredmeny</p>
	#end
	</div>
	
	
	
</body>
</html>
